= content_for :content_left do
  .row
    .well
      .page-header
        %h2 Modules for #{link_to(@group.name, groups_path)}
      
      %table.table.table-bordered.table-striped
        %thead
          %th
            Description
          %th
            Show
          %th
            Edit
          %th
            Delete
        - @collections.each do |collection|
          %tbody
            %td
              #{collection.description}
            %td= link_to 'Show', collection
            %td= link_to 'Edit', edit_collection_path(collection)
            %td= link_to 'Destroy', collection, :confirm => 'Are you sure?', :method => :delete
              
              
= content_for :content_right do
  .row
    .well
      %ul.nav.nav-list
        %li.nav-header
          Toolbar
        %li 
          = link_to new_group_collection_path(@group) do
            %i.icon-plus
            Add a Module
